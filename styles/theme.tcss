/* 
 * Catppuccin Macchiato 主题 - Gemini 聊天机器人
 */

/* === Catppuccin Macchiato 色板 === */
$bg-dark: #24273a;
$bg-panel: #1e2030;
$fg-main: #cad3f5;
$comment: #6e738d;
$purple: #c6a0f6;
$pink: #f5bde6;
$cyan: #91d7e3;
$green: #a6da95;
$orange: #f5a97f;
$red: #ed8796;
$yellow: #eed49f;

/* 高亮色 */
$bright-purple: #b7bdf8;
$bright-cyan: #8bd5ca;
$bright-green: #a6da95;

/* === 全局样式 === */
Screen {
    background: $bg-dark;
    color: $fg-main;
}

/* === Header 极简 === */
Header {
    background: $bg-panel;
    color: $purple;
    text-style: bold;
    dock: top;
    height: 1;
}

HeaderTitle {
    color: $purple;
}

/* === 消息列表区域 - 无边框 === */
#message-log {
    background: $bg-dark;
    border: none;
    height: 1fr;
    scrollbar-color: $comment;
    scrollbar-background: $bg-dark;
    padding: 0 1;
}

/* === 用户消息 - 极简 === */
.user-bubble {
    background: transparent;
    border: none;
    color: $pink;
    margin: 0;
    padding: 0 1;
}

/* === AI 消息 - 极简 === */
.ai-bubble {
    background: transparent;
    border: none;
    color: $cyan;
    margin: 0;
    padding: 0 1;
}

/* === 系统消息 === */
.system-bubble {
    background: transparent;
    border: none;
    color: $comment;
    margin: 0;
    padding: 0 1;
    text-style: italic;
}

/* === 错误消息 === */
.error-bubble {
    color: $red;
}

/* === 内联输入框 - 优化 Type-C 区域体验 === */
.inline-input {
    background: transparent;
    border: none;
    color: $green;
    height: auto;
    min-height: 1;
    padding: 0 1;
}

.inline-input:focus {
    /* 使用 Surface0 让输入框在深色背景中柔和凸显 */
    background: #363a4f; 
}

.inline-input > .input--placeholder {
    color: $comment;
}

/* === 状态栏 - 多行插件区 === */
#status-bar {
    dock: bottom;
    height: 6;
    background: $bg-panel;
    color: $fg-main;
    padding: 0 1;
    border-top: solid $comment;
    text-wrap: nowrap;
}
